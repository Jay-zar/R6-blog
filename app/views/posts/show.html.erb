<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>
<p>
  <strong>Body:</strong>
  <%= @post.body %>
</p>
<h3>Comments</h3>
<%= render @post.comments %>
<h3>Add a comment</h3>
<%= render partial: "comments/form", locals: {comment: @post.comments.new} %>
<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
